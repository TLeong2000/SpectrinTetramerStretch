#!/bin/bash
#PBS -N IdealizedStretch
#PBS -l walltime=01:30:00
#PBS -l nodes=1:ppn=32
#PBS -q bioe_zhpeng
#PBS -o nohup.out
#PBS -e nohup.error
######PBS -t 1-10
cd $PBS_O_WORKDIR

module load intel

# Because intel requires the use of a pair style (even if all coeffs are zero),
# this means that below cannot be used for displacement ratio of 0.00
#
mpirun -np 32 ./lmp_intel_cpu_intelmpi -sf intel -in IdealizedStretch.lammps

# Use below for displacement ratio of 0.00
#
# mpirun -np 32 ./lmp_intel_cpu_intelmpi -in IdealizedStretch.lammps
